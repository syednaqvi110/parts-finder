# Parts Finder Configuration
# Copy this file to .env and update the values as needed

# ============================================================================
# DATA SOURCE CONFIGURATION
# ============================================================================

# URL to your Google Sheets CSV export or other CSV data source
PARTS_DATABASE_URL=https://docs.google.com/spreadsheets/d/e/2PACX-1vSc2GTX3jc2NjJlR_zWVqDyTGf6bhCVc4GGaN_WMQDDlXZ8ofJVh5cbCPAD0d0lHY0anWXreyMdon33/pub?output=csv

# Data caching and timeout settings
DATA_CACHE_TTL=300          # Cache TTL in seconds (5 minutes)
DATA_TIMEOUT=15             # HTTP timeout in seconds

# ============================================================================
# SEARCH CONFIGURATION
# ============================================================================

# Search behavior settings
SEARCH_DEBOUNCE_MS=300      # Debounce delay in milliseconds
MAX_SEARCH_RESULTS=50       # Maximum number of search results
MIN_SEARCH_LENGTH=1         # Minimum characters required to search
FUZZY_THRESHOLD=45          # Fuzzy matching threshold (0-100)

# ============================================================================
# UI CONFIGURATION
# ============================================================================

# Pagination and display settings
RESULTS_PER_PAGE=20         # Number of results per page
MAX_RECENT_SEARCHES=10      # Number of recent searches to remember

# ============================================================================
# FEATURES CONFIGURATION
# ============================================================================

# Enable/disable features
ENABLE_ANALYTICS=true       # Track search analytics
ENABLE_SEARCH_SUGGESTIONS=true  # Show search suggestions

# ============================================================================
# LOGGING AND DEBUGGING
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# For production deployments, you might want to add:
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=0.0.0.0
# STREAMLIT_SERVER_HEADLESS=true

# ============================================================================
# OPTIONAL: MULTIPLE DATA SOURCES
# ============================================================================

# If you want to support multiple data sources, you can add:
# BACKUP_DATA_SOURCE_URL=https://backup-data-source.com/data.csv
# DATA_SOURCE_TYPE=google_sheets  # google_sheets, csv_url, database, etc.

# ============================================================================
# OPTIONAL: ADVANCED FEATURES
# ============================================================================

# For future enhancements:
# ENABLE_AUTOCOMPLETE=true
# ENABLE_KEYBOARD_SHORTCUTS=true
# ENABLE_EXPORT_RESULTS=true
# ENABLE_SEARCH_HISTORY_EXPORT=true
